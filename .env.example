# ==============================================================================
# AUTHORITY APP - ENVIRONMENT VARIABLES TEMPLATE
# ==============================================================================
# Copy this file to .env.local for local development or .env for production.
# Replace all placeholder values with your actual credentials.
# ==============================================================================

# ------------------------------------------------------------------------------
# SUPABASE CONFIGURATION
# ------------------------------------------------------------------------------
# Get these values from your Supabase project dashboard:
# https://app.supabase.com/project/YOUR_PROJECT_ID/settings/api

SUPABASE_PROJECT_NAME=your-project-name
SUPABASE_PROJECT_ID=your-project-id
SUPABASE_PROJECT_URL=https://your-project-id.supabase.co

# Supabase API Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key

# Supabase Database
DATABASE_URL=postgresql://postgres:your-password@db.your-project-id.supabase.co:5432/postgres
DB_HOST=db.your-project-id.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your-password

# Supabase API URLs
SUPABASE_REST_URL=https://your-project-id.supabase.co/rest/v1
SUPABASE_GRAPHQL_URL=https://your-project-id.supabase.co/graphql/v1
SUPABASE_FUNCTIONS_URL=https://your-project-id.supabase.co/functions/v1

# Supabase Storage (S3)
S3_ENDPOINT_URL=https://your-project-id.supabase.co/storage/v1/s3
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key

# Supabase Keys
SUPABASE_PUBLISHABLE_KEY=your-publishable-key
SUPABASE_SECRET_KEY=your-secret-key
SUPABASE_JWT_SECRET=your-jwt-secret

# ------------------------------------------------------------------------------
# OPENAI API
# ------------------------------------------------------------------------------
OPENAI_API_KEY=your-openai-api-key

# ------------------------------------------------------------------------------
# NOTION CONFIGURATION
# ------------------------------------------------------------------------------
# Get these from https://www.notion.so/my-integrations
NOTION_API_KEY=your-notion-api-key
NOTION_OAUTH_CLIENT_ID=your-notion-oauth-client-id
NOTION_OAUTH_CLIENT_SECRET=your-notion-oauth-client-secret
NOTION_OAUTH_REDIRECT_URI=https://your-project-id.supabase.co/auth/v1/callback

# ------------------------------------------------------------------------------
# ELEVENLABS API
# ------------------------------------------------------------------------------
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# ------------------------------------------------------------------------------
# DISCORD BOT CONFIGURATION
# ------------------------------------------------------------------------------
DISCORD_APPLICATION_ID=your-discord-application-id
DISCORD_PUBLIC_KEY=your-discord-public-key
DISCORD_CLIENT_SECRET=your-discord-client-secret
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_GUILD_ID=your-discord-guild-id
DISCORD_CHANNEL_ID=your-discord-channel-id
WEBHOOK_SECRET=your-webhook-secret

# ------------------------------------------------------------------------------
# N8N CONFIGURATION
# ------------------------------------------------------------------------------
N8N_API_KEY=your-n8n-api-key
N8N_HOST=your-n8n-host
N8N_EDITOR_BASE_URL=https://your-n8n-host
N8N_PUBLIC_API_URL=https://your-n8n-host/api
N8N_WEBHOOK_URL=https://your-n8n-host/webhook
N8N_WEBHOOK_URL_BASE=https://your-n8n-host
WEBHOOK_URL=https://your-n8n-host/webhook

# ------------------------------------------------------------------------------
# FLOWISE AI CONFIGURATION
# ------------------------------------------------------------------------------
FLOWISE_API_KEY=your-flowise-api-key
FLOWISE_HOST=your-flowise-host
FLOWISE_API_URL=https://your-flowise-host/api/v1

# ------------------------------------------------------------------------------
# OLLAMA CONFIGURATION (Local AI)
# ------------------------------------------------------------------------------
OLLAMA_HOST=http://localhost:11434
OLLAMA_API_URL=http://localhost:11434/api

# ------------------------------------------------------------------------------
# SITE URLS
# ------------------------------------------------------------------------------
NEXT_PUBLIC_SITE_URL=https://your-domain.com
SITE_URL=https://your-domain.com

# ------------------------------------------------------------------------------
# SMTP EMAIL CONFIGURATION
# ------------------------------------------------------------------------------
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_SENDER_NAME=your-app-name
SMTP_ADMIN_EMAIL=admin@your-domain.com
ENABLE_EMAIL_SIGNUP=true
ENABLE_EMAIL_AUTOCONFIRM=false
ENABLE_ANONYMOUS_USERS=false
